<domain type='${hyperVisor}'>
<name>${name}</name>
<uuid>${uuid}</uuid>
<memory>${memSize}</memory>
<vcpu>${cpuCount}</vcpu>
<os>
  <type arch='${arch}' machine='${machine}'>hvm</type>
  <boot dev='${bootDevice}'/>
</os>
<features>
  <pae/>
  <acpi/>
</features>
<devices>
  <emulator>${emulatorPath}</emulator>
  <disk type='file' device='disk'>
    <source file='/var/lib/libvirt/images/linux.img'/>
    <target dev='hda'/>
  </disk>
  <disk type='file' device='cdrom'>
    <source file='${cdromPath}'/>
    <target dev='hdc'/>
  </disk>

  <interface type='${interfaceType}'>
    <source network='${sourceNetwork}'/>
  </interface>
  
  <graphics type='vnc' port='-1' listen='0.0.0.0'/>
    <input type='tablet' bus='usb'/>
</devices>
</domain>

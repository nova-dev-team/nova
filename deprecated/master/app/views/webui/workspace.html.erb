<% content_for :page do %>

<script type='text/javascript'>

var g_working_pmachines = [
  // [ip, hostname]
<%=
  working_pm = Pmachine.all.select {|pm| pm.status == "working"}
  data = working_pm.collect {|pm| ["#{pm.ip}", "#{pm.hostname}"].to_json}
  js_code = data.join ","
  js_code
%>
];

$(document).ready(function() {
  load_workspace_clusters_list();
  <% if params[:vcluster_name] != nil and params[:vcluster_name] != "" %>
  load_cluster_content("<%= params[:vcluster_name] %>");
  <% end-%>
});
</script>

<table width="100%">
<tr><td valign="top" width='20%'>
List of clusters: <a href='#' onclick='load_workspace_clusters_list()'>(reload)</a>
<p/>
<div id='clusters-list'/>
</td><td valign='top'>
<div id='cluster-content'>
<center>
<h2>
Please select a cluster from left panel. <br/>
To create a new cluster/machine, use the 'wizard' page.
</h2>
</center>
</div>
</td></tr>
</table>

<% end %>

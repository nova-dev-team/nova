
<h2>All Virtual Machines</h2>
<hr/>

<table border="0"
  <tr>
    <% @list_of_vm.each do |d| %>
    <td valign="top"><%= d[:name] %> </td>
    <td valign="top">state => <%= d[:state] %> </td>
    <td valign="top">cpu => <%= d[:cpu_time] %> </td>
    <td><%= button_to "check",
	{:id => d[:uuid], :action => :check}, :method => :get %></td>
    <td><%= button_to "start",
	{:id => d[:uuid], :action => :start}, :method => :put %></td>
    <td><%= button_to "stop",
	{:id => d[:uuid], :action => :stop}, :method => :put %></td>
    <td><%= button_to "suspend",
	{:id => d[:uuid], :action => :suspend}, :method => :put %></td>
    <td><%= button_to "resume",
	{:id => d[:uuid], :action => :resume}, :method => :put %></td>
    <td><%= button_to "destroy",
	{:id => d[:uuid], :action => :destroy}, :method => :delete, :confirm => "Destroy the #{d[:name]}?" %></td>
  </tr>
<% end %>
</table>

<hr/>

<h2>Create a New Virtual Machine</h2>

<% form_for :vm, :url => {:action => :create} do |f| %>

<lable>define format:</label>
<%= f.text_field :format %></br>

<lable>define</label>
<%= f.text_area :define %><br />

<lable>run now</label>
<%= f.check_box :runow %><br />

<%= submit_tag "Create Now", :class => :submit%>

<% end %>


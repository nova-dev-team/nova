<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%" verticalAlign="middle" horizontalAlign="center">
	<mx:HBox>
		
	<mx:VBox verticalAlign="top" horizontalAlign="left" height="100%">
		<mx:Label text="List of uploaded vdisks:"/>
		<mx:List height="100%"/>
	</mx:VBox>
	<mx:VBox height="100%" paddingLeft="20">
		<mx:Grid horizontalCenter="0" label="Helloworld">
			<mx:GridRow width="100%" height="100%">
				<mx:GridItem width="50%" height="100%">
					<mx:Label text="File name" width="100%"/>
				</mx:GridItem>
				<mx:GridItem width="50%" height="100%">
					<mx:TextInput width="100%"/>
				</mx:GridItem>
			</mx:GridRow>
			<mx:GridRow width="100%" height="100%">
				<mx:GridItem width="50%" height="100%">
					<mx:Label text="Display name" width="100%"/>
				</mx:GridItem>
				<mx:GridItem width="50%" height="100%">
					<mx:TextInput width="100%"/>
				</mx:GridItem>
			</mx:GridRow>
			<mx:GridRow width="100%" height="100%">
				<mx:GridItem width="50%" height="100%">
					<mx:Label text="Internal name" width="100%"/>
				</mx:GridItem>
				<mx:GridItem width="50%" height="100%">
					<mx:TextInput width="100%"/>
				</mx:GridItem>
			</mx:GridRow>
			<mx:GridRow width="100%" height="100%">
				<mx:GridItem width="50%" height="100%">
					<mx:Label text="Image type" width="100%"/>
				</mx:GridItem>
				<mx:GridItem width="50%" height="100%">
					<mx:ComboBox width="100%">
						<mx:dataProvider>
							<mx:Array>
								<mx:String>iso</mx:String>
								<mx:String>sys</mx:String>
								<mx:String>sys.cow</mx:String>
								<mx:String>user</mx:String>
								<mx:String>user.cow</mx:String>
							</mx:Array>
						</mx:dataProvider>
					</mx:ComboBox>		
				</mx:GridItem>
			</mx:GridRow>
			<mx:GridRow width="100%" height="100%">
				<mx:GridItem width="100%" height="100%">
					<mx:Label text="Comment" width="100%"/>
				</mx:GridItem>
				<mx:GridItem width="100%" height="100%">
					<mx:TextArea height="100" width="100%"/>
				</mx:GridItem>
			</mx:GridRow>
		</mx:Grid>
	</mx:VBox>
	</mx:HBox>
	<mx:HBox>
		<mx:Button label="Add"/>
	</mx:HBox>
</mx:VBox>
